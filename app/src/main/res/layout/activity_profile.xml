<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">



        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backBtnProfile"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:tint="@color/black" />
        <Button
            android:id="@+id/resendEmail"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="Verify Email"
            android:background="@drawable/edit_details"
            android:textAllCaps="false"/>


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicProfile"
        android:layout_width="165dp"
        android:layout_height="189dp"
        android:layout_gravity="center"
        android:transitionName="profileTransition"
        android:layout_marginTop="70dp"
        android:src="@drawable/tanmay" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanmay Singhal"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Co Founder"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />





    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Edit Profile Details"
        android:background="@drawable/edit_details"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"/>










    <Button
        android:id="@+id/logoutBtnProfile"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:text="Logout"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:textColor="#f3434e"
        android:background="@drawable/logout"
        />





</LinearLayout>