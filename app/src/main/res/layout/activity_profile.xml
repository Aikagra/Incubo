<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="165dp"
        android:layout_height="189dp"
        android:layout_gravity="center"
        android:transitionName="profileTransition"
        android:layout_marginTop="80dp"
        android:src="@drawable/tanmay" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanmay Singhal"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Co Founder"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />





    <TextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:text="Edit Profile Details"
        android:background="@drawable/edit_details"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"/>






    <TextView
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:text="Logout"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:textColor="#f3434e"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/logout"
        />



</LinearLayout>