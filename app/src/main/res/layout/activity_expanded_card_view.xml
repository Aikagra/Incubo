<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ExpandedCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backBtnCardView"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="571dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_transition"
        android:orientation="vertical">


             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/imgTransition"
                 android:layout_width="match_parent"
                 android:layout_height="199dp"
                 android:src="@drawable/mentor2"
                 app:shapeAppearanceOverlay="@style/hi"
                 android:adjustViewBounds="true"
                 android:transitionName="transitionmentor2"
                 />

        <TextView
            android:id="@+id/nameTransition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:text="Ben Decker"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTransition"
            android:layout_width="296dp"
            android:layout_height="202dp"
            android:layout_gravity="left"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="14dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="5dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Risus mauris nibh neque, in dui at vulputate velit. Pellentesque sollicitudin sed in sollicitudin sed placerat. Ultrices vitae, tempus nulla sit bibe"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>









</RelativeLayout>